<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Material.Components.Controls"
    xmlns:elevations="clr-namespace:Material.Components.Elevations"
    xmlns:shapes="clr-namespace:Material.Components.Shapes">

    <Style TargetType="{x:Type controls:Container}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="shapes:ShapeAssist.Family" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(shapes:ShapeAssist.Family)}" />
        <Setter Property="shapes:ShapeAssist.Style" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(shapes:ShapeAssist.Style)}" />
        <Setter Property="shapes:ShapeAssist.Direction" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(shapes:ShapeAssist.Direction)}" />
        <Setter Property="shapes:ShapeAssist.Radius" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(shapes:ShapeAssist.Radius)}" />
        <Setter Property="elevations:ElevationAssist.Level" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(elevations:ElevationAssist.Level)}" />
    </Style>
</ResourceDictionary>