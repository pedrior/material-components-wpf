<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Material.Components.Controls"
    xmlns:interaction="clr-namespace:Material.Components.Interaction">

    <Style TargetType="{x:Type controls:FocusIndicator}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Brush" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(interaction:InteractionAssist.FocusIndicatorBrush)}" />
        <Setter Property="Padding" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(interaction:InteractionAssist.FocusIndicatorPadding)}" />
        <Setter Property="Thickness" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(interaction:InteractionAssist.FocusIndicatorThickness)}" />
        <Setter Property="Device" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(interaction:InteractionAssist.FocusIndicatorDevice)}" />
    </Style>
</ResourceDictionary>