<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Material.Components.Controls"
    xmlns:icons="clr-namespace:Material.Components.Icons">

    <Style TargetType="{x:Type controls:SymbolIcon}">
        <Setter Property="Width" Value="18" />
        <Setter Property="Height" Value="18" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Fill" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(icons:IconAssist.Fill)}" />
        <Setter Property="Kind" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(icons:IconAssist.Kind)}" />
        <Setter Property="Symbol" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(icons:IconAssist.Symbol)}" />
        <Setter Property="Weight" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(icons:IconAssist.Weight)}" />
    </Style>
</ResourceDictionary>