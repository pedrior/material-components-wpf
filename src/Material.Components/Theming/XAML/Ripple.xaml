<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Material.Components.Controls"
    xmlns:interaction="clr-namespace:Material.Components.Interaction">

    <Style TargetType="{x:Type controls:Ripple}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Tint" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(interaction:InteractionAssist.RippleTint)}" />
        <Setter Property="Animate" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(interaction:InteractionAssist.RippleAnimate)}" />
        <Setter Property="IsCentered" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(interaction:InteractionAssist.RippleIsCentered)}" />
        <Setter Property="IsUnbounded" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(interaction:InteractionAssist.RippleIsUnbounded)}" />
        <Setter Property="EnableRightClick" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(interaction:InteractionAssist.RippleEnableRightClick)}" />
    </Style>
</ResourceDictionary>